%h1 Roles
.table-responsive
  %table.table
    %thead
      %tr
        %th Name
        %th Description
        %th{:colspan => "3"}
    %tbody
      - @roles.each do |role|
        %tr
          %td= role.name
          %td= role.description
          %td= link_to 'Show', role
          %td
            - if can? :update, role
              = link_to 'Edit', edit_role_path(role)
          %td
            - if can? :destroy, role
              = link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }
%br
- if can? :create, Role
  = link_to 'New Role', new_role_path, class: 'btn btn-default'
