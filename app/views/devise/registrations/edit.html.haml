%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  .field
    = f.label :first_name, class: "label label-default"
    %br
    = f.text_field :first_name, class: 'form-control input-sm'
  .field
    = f.label :last_name, class: "label label-default"
    %br
    = f.text_field :last_name, class: 'form-control input-sm'
  .field
    = f.label :email, class: "label label-default"
    %br
    = f.email_field :email, class: 'form-control input-sm', autofocus: true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    = f.label :password, class: "label label-default"
    %i (leave blank if you don't want to change it)
    %br
    = f.password_field :password, class: 'form-control input-sm', autocomplete: "off"
    - if @minimum_password_length
      %br
      %em
        = @minimum_password_length
        characters minimum
  .field
    = f.label :password_confirmation, class: "label label-default"
    %br
    = f.password_field :password_confirmation, class: 'form-control input-sm', autocomplete: "off"
  .field
    = f.label :current_password, class: "label label-default"
    %i (we need your current password to confirm your changes)
    %br
    = f.password_field :current_password, class: 'form-control input-sm', autocomplete: "off"
  .actions
    = f.submit "Update", class: 'btn btn-success'
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-default'}
= link_to "Back", :back, class: 'btn btn-default'
