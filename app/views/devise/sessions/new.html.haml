%h2 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .field
    = f.label :email, class: "label label-default"
    %br
    = f.email_field :email, autofocus: true, class: 'form-control input-sm'
  .field
    = f.label :password, class: "label label-default"
    %br
    = f.password_field :password, class: 'form-control input-sm', autocomplete: "off"
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me, class: "label label-default"
  .actions
    = f.submit "Log in", class: 'btn btn-success'
= render "devise/shared/links"
