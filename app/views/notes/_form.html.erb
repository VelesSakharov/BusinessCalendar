<%= form_for(@note) do |f| %>
    <% if @note.errors.any? %>
        <div id="error_explanation">
          <% @note.errors.full_messages.each do |message| %>
              <%= flash[:alert] = message %>
          <% end %>
        </div>
    <% end %>

    <div class="field">
      <span class="label label-default"><%= f.label :title %></span><br>
      <%= f.text_field :title, class: 'form-control input-sm' %>
    </div>

    <div class="field">
      <span class="label label-default"><%= f.label :content %></span><br>
      <%= f.text_area :content, class: 'form-control input-sm' %>
    </div>

    <div class="field">
      <span class="label label-default"><%= f.label :appointment %></span><br>
      <%= f.text_field :appointment, class: 'form-control input-sm' %>
    </div>

    <div class="actions">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
<% end %>
