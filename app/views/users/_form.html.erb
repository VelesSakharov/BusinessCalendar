<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <% @user.errors.full_messages.each do |message| %>
              <%= flash[:alert] = message %>
          <% end %>
        </div>
    <% end %>


    <div class="field">
      <span class="label label-default"><%= f.label :first_name %></span><br>
      <%= f.text_field :first_name, class: 'form-control input-sm' %>
    </div>

    <div class="field">
      <span class="label label-default"><%= f.label :last_name %></span><br>
      <%= f.text_field :last_name, class: 'form-control input-sm' %>
    </div>

    <div class="field">
      <span class="label label-default"><%= f.label :email %></span><br>
      <%= f.text_field :email, class: 'form-control input-sm' %>
    </div>

    <div class="field">
      <span class="label label-default"><%= f.label :password %></span><br>
      <%= f.text_field :password, class: 'form-control input-sm' %>
    </div>

    <div class="actions">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
<% end %>
