%h1 Users
.table-responsive
  %table.table
    %thead
      %tr
        %th Name
        %th Lastname
        %th Email
        %th{:colspan => "3"}
    %tbody
      - @users.each do |user|
        %tr
          %td= user.first_name
          %td= user.last_name
          %td= user.email
          %td= link_to 'Show', user
          %td
            - if can? :update, user
              = link_to 'Edit', edit_user_path(user)
          %td
            - if can? :destroy, user
              = link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
- if can? :create, User
  = link_to 'New User', new_user_path, class: 'btn btn-default'
